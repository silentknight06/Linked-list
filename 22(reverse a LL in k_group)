

ListNode* reverseKGroup(ListNode* head, int k) {
        
      if(head==NULL){
          return head;
      }

// if node ks size 4 se kam hpga toh 

ListNode *temp = head;
for(int i = 0; i<k; i++){
    if(temp==NULL){
        return head;
    }
    temp = temp->next;
}





      ListNode *curr = head;
      ListNode *prev = NULL;
      ListNode *next = NULL;
      int count = 0;
      while(curr != NULL && count<k){
          next = curr->next;
          curr->next = prev;
          prev = curr ;
          curr = next;
        count++;
      }
      if(next != NULL){
          head->next = reverseKGroup(next, k);
      }

return prev;

    }
};
